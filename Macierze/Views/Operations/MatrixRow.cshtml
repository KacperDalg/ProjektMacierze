@using Newtonsoft.Json
@{
    ViewData["Title"] = "Suma z wiersza";
    @model Macierze.Models.MatrixModel;
    var serializedObject = JsonConvert.SerializeObject(Model);
}

<div class="center">
    <form asp-action="SumRow" asp-controller="Operations">
        <h1 style="font-size:30px;margin:auto;display:block;">Podaj numer wiersza, którego sumę elementów chcesz policzyć:</h1>
        <input type="number" style="text-align:center;font-size:24px;margin:auto;display:block;" name="row">
        <br />
        <input type="hidden" id="serializedObject" name="serializedObject" value="@serializedObject" />
        <input style="font-size:24px;margin:auto;display:block;" type="submit" id="submit" class="btn-primary" value="Potwierdź" />
    </form>
</div>
<form asp-action="RedirectToOptions" asp-controller="Operations">
    <input type="hidden" id="serializedObject" name="serializedObject" value="@serializedObject" />
    <button type="submit" asp-controller="Operations" asp-action="RedirectToOptions" class="btn btn-success" style="font-size:24px;position:absolute;left:50vw;bottom:50px;transform: translate(-50%, -50%);">Wróć do opcji</button>
</form>