@using Newtonsoft.Json
@{
    ViewData["Title"] = "Suma z wiersza";
    @model Macierze.Models.MatrixModel;
    string serializedMatrix = JsonConvert.SerializeObject(Model);
}

<div class="center">
    <h1 style="font-size:30px;">Suma elementów z wiersza @Model.Sequence. jest równa: @Model.Sum.</h1>
    <br />
    <br />
</div>
<form asp-action="RedirectToOptions" asp-controller="Operations">
    <input type="hidden" id="serializedMatrix" name="serializedMatrix" value="@serializedMatrix" />
    <button type="submit" class="btn btn-success" style="font-size:24px;position:absolute;left:50vw;bottom:50px;transform: translate(-50%, -50%);">Wróć do opcji</button>
</form>